<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/tValorA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Digite um valor"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/tValorB"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.656" />

    <EditText
        android:id="@+id/tValorB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="96dp"
        android:ems="10"
        android:hint="Digite outro valor"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/bSoma"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tResultado"
        android:layout_width="249dp"
        android:layout_height="40dp"
        android:layout_marginBottom="140dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/bSubtrai"
        android:layout_width="49dp"
        android:layout_height="47dp"
        android:layout_marginEnd="16dp"
        android:text="-"
        app:layout_constraintEnd_toStartOf="@+id/bMultiplica"
        app:layout_constraintTop_toTopOf="@+id/bMultiplica" />

    <Button
        android:id="@+id/bDivide"
        android:layout_width="49dp"
        android:layout_height="47dp"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="84dp"
        android:text="/"
        app:layout_constraintBottom_toTopOf="@+id/tResultado"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/bSoma"
        android:layout_width="49dp"
        android:layout_height="47dp"
        android:text="+"
        app:layout_constraintBottom_toBottomOf="@+id/bSubtrai"
        app:layout_constraintEnd_toStartOf="@+id/bSubtrai"
        app:layout_constraintHorizontal_bias="0.818"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/bMultiplica"
        android:layout_width="49dp"
        android:layout_height="47dp"
        android:layout_marginEnd="16dp"
        android:text="X"
        app:layout_constraintBottom_toBottomOf="@+id/bDivide"
        app:layout_constraintEnd_toStartOf="@+id/bDivide" />

</androidx.constraintlayout.widget.ConstraintLayout>